# ===========================================
# EvoAlpha OS - 环境变量配置模板
# ===========================================
# 复制此文件为 .env 并填入真实值

# ===========================================
# 本地工厂配置（MBP）
# ===========================================
LOCAL_DB_PATH=./data/local_quant.db

# ===========================================
# 云端数据库配置（CockroachDB）
# ===========================================
CLOUD_DB_HOST=your-cockroachdb-host.cockroachlabs.cloud
CLOUD_DB_PORT=26257
CLOUD_DB_USER=your-username
CLOUD_DB_PASSWORD=your-password
CLOUD_DB_NAME=evo_alpha_os
CLOUD_DB_SSLMODE=require

# ===========================================
# 同步配置（R2 对象存储）
# ===========================================
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=evo-alpha-data
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# ===========================================
# AI 服务配置（GLM-4）
# ===========================================
GLM_API_KEY=your-glm-api-key
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4/
GLM_MODEL=glm-4-flash
GLM_MAX_TOKENS=2000
GLM_TEMPERATURE=0.7

# ===========================================
# 邮件服务配置（Resend）
# ===========================================
RESEND_API_KEY=re-your-resend-api-key
RESEND_FROM_EMAIL=noreply@your-domain.com
RESEND_FROM_NAME=EvoAlpha OS

# ===========================================
# 数据源配置
# ===========================================
AKSHARE_PROXY=  # 如果需要代理，填写代理地址
NEWS_SOURCES=eastmoney,sina,firstfinancing  # 新闻数据源

# ===========================================
# 定时任务配置
# ===========================================
SCHEDULER_TIMEZONE=Asia/Shanghai
DAILY_JOB_TIME=15:30  # 每日数据更新时间
LUNCH_REPORT_TIME=11:30  # 午间简报时间
AFTERNOON_REPORT_TIME=15:45  # 盘后日报时间

# ===========================================
# 应用配置
# ===========================================
APP_ENV=development  # development | production
APP_DEBUG=true
APP_LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
